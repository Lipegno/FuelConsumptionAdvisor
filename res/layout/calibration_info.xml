<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<!-- The parent container for the vehicle dynamics -->
	<LinearLayout
		android:id="@+id/calibration_info_dynamics"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:orientation="vertical"
		android:layout_marginTop="40px"
		android:layout_marginLeft="5px">

		<!-- The top bar -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_centerHorizontal="true"
			android:layout_gravity="center">
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="Vehicle Dynamics"
				android:textSize="@dimen/textSmall" />
			<View
				android:layout_height="0.5dip"
				android:layout_width="fill_parent"
				android:background="@color/gray" />
		</LinearLayout>

		<!-- The textual information -->
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="horizontal"
			android:layout_marginTop="20px">
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5px"
				android:orientation="vertical">
				<!-- Distance text -->
				<TextView 
					style="@style/calibrationInfoNormalText"
					android:text="Distance" />
				<TextView
					style="@style/calibrationInfoAuxiliaryText"
					android:text="(m)" />
				
				<!-- Speed text -->
				<TextView
					style="@style/calibrationInfoNormalText"
					android:layout_marginTop="20px"
					android:text="Speed" />
				<TextView 
					style="@style/calibrationInfoAuxiliaryText"
					android:text="(m/s)" />
				<!-- Acceleration text -->
				<TextView
					style="@style/calibrationInfoNormalText"
					android:layout_marginTop="20px"
					android:text="Accel." />
				<TextView 
					style="@style/calibrationInfoAuxiliaryText"
					android:text="(m/s^2)" />
					
				<!-- Grade text -->
				<TextView
					style="@style/calibrationInfoNormalText"
					android:layout_marginTop="20px"
					android:text="Grade" />
				<TextView 
					style="@style/calibrationInfoAuxiliaryText"
					android:text="(ยบ)"
					android:layout_marginBottom="10px" />
			</LinearLayout>
			
			<!-- The layout that holds the actual vehicle dynamics -->
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10px"
				android:orientation="vertical">
				
				<!-- Distance value -->
				<TextView
					android:id="@+id/calibration_info_distance"
					style="@style/calibrationInfoBigGreen"
					android:width="130px"
					android:gravity="center"
					android:text="0000.0" />
				
				<!-- Speed value -->
				<TextView
					android:id="@+id/calibration_info_speed"
					style="@style/calibrationInfoBigGreen"
					android:layout_marginTop="15px"
					android:text="00.0" />
				
				<!-- Acceleration value -->
				<TextView
					android:id="@+id/calibration_info_acceleration"
					style="@style/calibrationInfoBigGreen"
					android:layout_marginTop="25px"
					android:text="00.0" />
				
				<!-- Grade value -->
				<TextView
					android:id="@+id/calibration_info_grade"
					style="@style/calibrationInfoBigGreen"
					android:layout_marginTop="20px"
					android:text="00.0"
					android:textSize="40px" />
			</LinearLayout>
		</LinearLayout>
		<View
			android:layout_height="0.5dip"
			android:layout_width="100px"
			android:layout_gravity="center"
			android:background="@color/gray" />
	</LinearLayout>
	
	<!-- The information the GPS status -->
	<LinearLayout
		android:id="@+id/calibration_info_gps"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginTop="40px"
		android:layout_marginRight="20px"
		android:orientation="vertical">
		
		<!-- The top bar -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_centerHorizontal="true">
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="GPS Status"
				android:textSize="@dimen/textSmall" />
			<View
				android:layout_height="0.5dip"
				android:layout_width="fill_parent"
				android:layout_gravity="center"
				android:background="@color/gray" />
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20px"
			android:orientation="horizontal">
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView 
					style="@style/calibrationInfoNormalText"
					android:text="Status"/>
				<TextView 
					style="@style/calibrationInfoNormalText"
					android:layout_marginTop="20px"
					android:text="Num. Sats"/>			
			</LinearLayout>
			
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView
					android:id="@+id/calibration_info_gps_status"
					style="@style/calibrationInfoNormalText"
					android:gravity="center"
					android:width="40px"
					android:textColor="@color/red"
					android:text="Off"/>
				<TextView 
					android:id="@+id/calibration_info_num_sats"
					style="@style/calibrationInfoNormalText"
					android:gravity="center"
					android:width="40px"
					android:layout_marginTop="20px"
					android:text="0"/>	
			</LinearLayout>
		</LinearLayout>
		
		<!-- The bottom separator -->
		<View
			android:layout_height="0.5dip"
			android:layout_width="70px"
			android:layout_gravity="center"
			android:layout_marginTop="10px"
			android:background="@color/gray" />
	</LinearLayout>
	
	<!-- The information about the current vehicle state -->
	<LinearLayout
		android:id="@+id/calibration_info_state"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_alignParentRight="true"
		android:layout_marginRight="20px"
		android:layout_alignBottom="@id/calibration_info_dynamics">
		
		<!-- The top bar -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_centerHorizontal="true"
			android:layout_gravity="center">
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="Vehicle State"
				android:textSize="@dimen/textSmall" />
			<View
				android:layout_height="0.5dip"
				android:layout_width="fill_parent"
				android:background="@color/gray" />
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20px"
			android:orientation="horizontal">
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView 
					style="@style/calibrationInfoNormalText"
					android:text="State"/>
				<TextView 
					style="@style/calibrationInfoNormalText"
					android:layout_marginTop="20px"
					android:text="Prev State"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView 
					style="@style/calibrationInfoNormalText"
					android:gravity="center"
					android:width="80px"
					android:text="-------"/>
				<TextView 
					style="@style/calibrationInfoNormalText"
					android:gravity="center"
					android:layout_marginTop="20px"
					android:width="80px"
					android:text="-------"/>
			</LinearLayout>
		</LinearLayout>
		<View
			android:layout_height="0.5dip"
			android:layout_marginTop="10px"
			android:layout_width="80px"
			android:layout_gravity="center"
			android:background="@color/gray" />
	</LinearLayout>	
	
	<!-- Overall calibration information -->
	<LinearLayout
		android:id="@+id/calibration_info_overall"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:orientation="vertical"
		android:layout_marginTop="60px"
		android:layout_below="@id/calibration_info_dynamics">
		<!-- The top bar -->
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_centerHorizontal="true"
			android:layout_gravity="center">
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="Overall Calibration Info"
				android:textSize="@dimen/textSmall" />
			<View
				android:layout_height="0.5dip"
				android:layout_width="fill_parent"
				android:background="@color/gray" />
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20px"
			android:orientation="horizontal">
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView 
					style="@style/calibrationInfoNormalText"
					android:text="Vehicle Plate"/>
				<TextView 
					style="@style/calibrationInfoNormalText"
					android:layout_marginTop="20px"
					android:text="Num. Samples"/>
				<TextView 
					style="@style/calibrationInfoNormalText"
					android:layout_marginTop="20px"
					android:text="Elapsed Time"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView 
					style="@style/calibrationInfoNormalText"
					android:width="120px"
					android:gravity="center"
					android:text="77-03-RG"/>
				<TextView 
					style="@style/calibrationInfoNormalText"
					android:layout_marginTop="20px"
					android:width="100px"
					android:gravity="center"
					android:text="------"/>
				<TextView 
					style="@style/calibrationInfoNormalText"
					android:layout_marginTop="20px"
					android:width="120px"
					android:gravity="center"
					android:text="00:00:00"/>
			</LinearLayout>
		</LinearLayout>
		
		<View
			android:layout_height="0.5dip"
			android:layout_width="150px"
			android:layout_gravity="center"
			android:layout_marginTop="10px"
			android:background="@color/gray" />
	</LinearLayout>
	
	<!-- The bottom bar -->
	<LinearLayout
		style="@style/bottomBarLayout">
		<View 
			style="@style/bottomBarSeperator"/>
		<RelativeLayout
			style="@style/bottomBarInnerLayout">
			<Button
				android:id="@+id/calibration_info_finish_button"
				style="@style/bottomBarButton"
				android:layout_centerHorizontal="true"
				android:onClick="handleButtonClick"
				android:text="Finish"
				android:drawableRight="@drawable/power_red">
			</Button>
		</RelativeLayout>
	</LinearLayout>
	
</RelativeLayout>