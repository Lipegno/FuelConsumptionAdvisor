<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/vehicle_info" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<TableLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TableRow
			android:paddingTop="10px"
			android:gravity="center">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Distance"
				android:textColor="@color/red"
				android:textSize="@dimen/textBig">
			</TextView>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="(m)"
				android:textSize="12px">
			</TextView>
		</TableRow>
		<TableRow
			android:gravity="center"
			android:paddingTop="7.5px">
			<com.fuel.advisor.ui.custom.TextViewBorder
				android:id="@+id/distance"
				android:gravity="center"
				android:textSize="@dimen/textMedium"
				android:text="0">
			</com.fuel.advisor.ui.custom.TextViewBorder>
		</TableRow>
		<TableRow
			android:paddingTop="20px"
			android:gravity="center">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Acceleration "
				android:textColor="@color/red"
				android:textSize="@dimen/textBig">
			</TextView>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="(m/s^2)"
				android:textSize="12px">
			</TextView>
		</TableRow>
		<TableRow
			android:gravity="center"
			android:paddingTop="7.5px">
			<com.fuel.advisor.ui.custom.TextViewBorder
				android:id="@+id/acceleration"
				android:gravity="center"
				android:textSize="@dimen/textMedium"
				android:text="0">
			</com.fuel.advisor.ui.custom.TextViewBorder>
		</TableRow>
			<TableRow
			android:paddingTop="20px"
			android:gravity="center">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Velocity "
				android:textSize="@dimen/textBig"
				android:textColor="@color/red">
			</TextView>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="(m/s)"
				android:textSize="12px">
			</TextView>
		</TableRow>
		<TableRow
			android:gravity="center"
			android:paddingTop="7.5px"
			>
			<com.fuel.advisor.ui.custom.TextViewBorder
				android:id="@+id/velocity"
				android:gravity="center"
				android:textSize="@dimen/textMedium"
				android:text="0">
			</com.fuel.advisor.ui.custom.TextViewBorder>
		</TableRow>
		
		<TableRow
			android:paddingTop="20px"
			android:gravity="center">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Grade "
				android:textSize="@dimen/textBig"
				android:textColor="@color/red">
			</TextView>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="(ยบ)"
				android:textSize="12px">
			</TextView>
		</TableRow>
		<TableRow
			android:gravity="center"
			android:paddingTop="7.5px"
			>
			<com.fuel.advisor.ui.custom.TextViewBorder
				android:id="@+id/grade"
				android:gravity="center"
				android:textSize="@dimen/textMedium"
				android:text="0">
			</com.fuel.advisor.ui.custom.TextViewBorder>
		</TableRow>
		
		<TableRow
			android:paddingTop="20px"
			android:gravity="center">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="VSP "
				android:textSize="@dimen/textBig"
				android:textColor="@color/red">
			</TextView>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="(m^2/s^3)"
				android:textSize="12px">
			</TextView>
		</TableRow>
		<TableRow
			android:gravity="center"
			android:paddingTop="7.5px">
			<com.fuel.advisor.ui.custom.TextViewBorder
				android:id="@+id/vsp"
				android:gravity="center"
				android:textSize="@dimen/textMedium"
				android:text="0">
			</com.fuel.advisor.ui.custom.TextViewBorder>
		</TableRow>
		<TableRow
			android:paddingTop="10px"
			android:gravity="center">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="State"
				android:textSize="@dimen/textBig"
				android:textColor="@color/red"/>
			<TextView 
				android:gravity="center"
				android:paddingTop="7.5px"/>
		</TableRow>
		<TableRow
			android:gravity="center"
			android:paddingTop="7.5px">
			<com.fuel.advisor.ui.custom.TextViewBorder
				android:id="@+id/state"
				android:gravity="center"
				android:textSize="@dimen/textMedium"
				android:text="---">
			</com.fuel.advisor.ui.custom.TextViewBorder>
		</TableRow>
		<TableRow
			android:gravity="center"
			android:paddingTop="80px">
			<TextView
				android:text="GPS Status">
			</TextView>
			<TextView
				android:id="@+id/gps_status"
				android:gravity="center"
				android:textSize="@dimen/textMedium"
				android:text="NO FIX"
				android:textColor="@color/red">
			</TextView>
		</TableRow>
		<TableRow
			android:gravity="center"
			android:paddingTop="7.5px">
			<TextView
				android:text="# Satellites">
			</TextView>
			<TextView
				android:id="@+id/num_sat"
				android:gravity="center"
				android:textSize="@dimen/textMedium"
				android:text="0">
			</TextView>
		</TableRow>
	</TableLayout>
	
	<!-- Show the bottom bar -->
	<LinearLayout
		style="@style/bottomBarLayout">
		<View 
			style="@style/bottomBarSeperator"/>
		<RelativeLayout
			style="@style/bottomBarInnerLayout">			
			<Button
				style="@style/bottomBarButton"
				android:layout_centerHorizontal="true"
				android:id="@+id/finish_vehicle_info"
				android:onClick="handleButtonClick"
				android:text="Finish"
				android:drawableLeft="@drawable/power_red">
			</Button>
		</RelativeLayout>
	</LinearLayout>
	
</RelativeLayout>
