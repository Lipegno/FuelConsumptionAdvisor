<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  
  <TextView 
  	android:id="@+id/vehicle_list_view_plate"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_marginLeft="10px"
  	android:text="77-03-RG" 
  	android:textSize="@dimen/textBig"/>
  <TextView 
  	android:id="@+id/vehicle_list_view_brand"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_marginLeft="10px"
  	android:layout_below="@id/vehicle_list_view_plate"
  	android:text="Polo 1.0"
  	android:textSize="@dimen/textMedium"/>
  <TextView 
  	android:id="@+id/vehicle_list_view_year"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_marginLeft="10px"
  	android:layout_below="@id/vehicle_list_view_brand"
  	android:textSize="@dimen/textSmall"
  	android:text="2001"/>
  <ImageView 
  	android:id="@+id/vehicle_list_view_type"
  	android:layout_width="60px"
  	android:layout_height="60px"
  	android:layout_alignParentRight="true"
  	android:layout_centerVertical="true"
  	android:layout_marginRight="10px"/>
  
</RelativeLayout>